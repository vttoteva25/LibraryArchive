@model LibraryArchive.ViewModels.ReaderViewModel.ProfileViewModel
@using LibraryArchive.HelpingTools

@{
    ViewData["Title"] = "Profile | LibraryArchive";
}

<body class="custom">
    <div class="container py-5 px-4">
        <div class="bg-white shadow rounded overflow-hidden">
            <div class="cover px-4 pt-0 pb-4">
                <div class="media align-items-end profile-head">
                    <div class="profile mr-3">
                        <img src="/images/profilePicture.svg" alt="Profile Picture" width="130" class="rounded-circle mb-2 img-thumbnail">
                    </div>
                </div>
            </div>
            <div class="px-3 py-4" style="margin-top: 20px;">
                <div class="p-4 my-2 rounded shadow-sm bg-light">
                    <h5 class="mb-2 ml-3">Информация</h5>
                    <p class="normal-text mb-1 ml-3">Име: @Model.User.FirstName</p>
                    <p class="normal-text mb-1 ml-3">Фамилия: @Model.User.LastName</p>
                    <p class="normal-text mb-1 ml-3">Дата на раждане: @Model.User.BirthDate.ToShortDateString()</p>
                    <p class="normal-text mb-1 ml-3">Телефонен номер: @Model.User.PhoneNumber</p>
                    <p class="normal-text mb-1 ml-3">E-mail: @Model.User.Email</p>
                </div>
                <div class="p-4 my-2 rounded shadow-sm bg-light">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                        <div class="col-6">
                            <h3 class="mb-0">Читателска история</h3>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-controller="Borrow" asp-action="Borrow" asp-route-userId="@Model.User.UserId" class="btn btn-primary">Вземи книга</a>
                        </div>
                    </div>
                    @if (Model.BorrowingsCount > 0)
                    {
                        @if (Model.BooksToReturn.Count > 0)
                        {
                            <div class="px-4">
                                <div class="p-4 rounded shadow-sm bg-light">
                                    <h5 class="mb-3">Текущи взимания</h5>
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Заглавие</th>
                                                <th>Дата на вземане</th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.BooksToReturn)
                                            {
                                                <tr>
                                                    <td>@book.Title</td>
                                                    <td>@book.BorrowDate</td>
                                                    <td>
                                                        <a asp-controller="Borrow" asp-action="Return" asp-route-bookId="@book.BookId" asp-route-userId="@Model.User.UserId" class="btn btn-primary">Връщане</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                        @if (Model.ReturnedBooks.Count > 0)
                        {
                            <div class="px-4">
                                <div class="p-4 rounded shadow-sm bg-light">
                                    <h5 class="mb-3">История на взети книги</h5>
                                    <table class="table table-bordered table-striped">
                                        <thead>
                                            <tr>
                                                <th>Заглавие</th>
                                                <th>Дата на вземане</th>
                                                <th>Дата на връщане</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.ReturnedBooks)
                                            {
                                                <tr>
                                                    <td>@book.Title</td>
                                                    <td>@book.BorrowDate</td>
                                                    <td>@book.ReturnDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="px-4">
                            <div class="p-4 rounded shadow-sm bg-light">
                                <h5 class="mb-3">История на взети книги</h5>
                                <p class="normal-text mb-0">Няма история на взети книги.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>

