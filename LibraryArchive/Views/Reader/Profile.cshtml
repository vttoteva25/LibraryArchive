@model LibraryArchive.ViewModels.ReaderViewModel.ProfileViewModel;
@using LibraryArchive.HelpingTools;
@{
    ViewData["Title"] = "Profile | LibraryArchive";
}

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body class="custom">
    <div class="row py-5 px-4">
        <div class="col-md-10 mx-auto">
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img src="/images/profilePicture.svg" alt="..." width="130" class="rounded-circle mb-2 img-thumbnail"></div>
                    </div>
                </div>
                <div class="px-3 py-4" style="margin-top: 20px;">
                    <div class="p-4 my-2 rounded shadow-sm bg-light">
                        <h5 class="mb-2" style="margin-left: 35px;">Информация</h5>
                        <p class="normal-text mb-0">Име: @Model.User.FirstName</p>
                        <p class="normal-text mb-0">Фамилия: @Model.User.LastName</p>
                        <p class="normal-text mb-0">Дата на раждане: @Model.User.BirthDate.ToShortDateString()</p>
                        <p class="normal-text mb-0">Телефонен номер: @Model.User.PhoneNumber</p>
                        <p class="normal-text mb-0">E-mail: @Model.User.Email</p>
                    </div>
                    <div class="p-4 my-2 rounded shadow-sm bg-light">
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <div class="col-6">
                                <h3 class="mb-0" style="text-indent: 10px;">Читателска история</h3>
                            </div>
                            <div class="col-6 text-right">
                                <a asp-controller="Borrowing" asp-action="Borrow" class="btn btn-primary">Вземи книга</a>
                            </div>
                        </div>
                        @if (Model.BorrowingsCount > 0)
                        {
                            @if (Model.BooksToReturn.Count > 0)
                            {
                                <div class="px-4">
                                    <table class="table table-bordered table-striped" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="color: #402b2b; font-family: Bahnschrift;">
                                                    Заглавие
                                                </th>
                                                <th style="color: #402b2b; font-family: Bahnschrift;">
                                                    Дата на вземане
                                                </th>
                                                <th>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.BooksToReturn)
                                            {
                                                <tr>
                                                    <td style="color: #402b2b; font-family: Bahnschrift;" width="15%">@book.Title</td>
                                                    <td style="color: #402b2b; font-family: Bahnschrift;" width="15%">@book.BorrowDate</td>
                                                    <td width="10%">
                                                        <a asp-controller="Borrow" asp-action="Return" asp-route-bookId="@book.BookId" asp-route-userId="@Model.User.UserId">
                                                            <span class="glyphicon glyphicon-edit"></span>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>

                            }
                            else
                            {
                                <div class="p-4 rounded shadow-sm bg-light">
                                    <p class="normal-text mb-0">Няма взети книги към момента.</p>
                                </div>
                            }

                            @if (Model.ReturnedBooks.Count > 0)
                            {
                                <div class="px-4">
                                    <table class="table table-bordered table-striped" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th style="color: #402b2b; font-family: Bahnschrift;">
                                                    Заглавие
                                                </th>
                                                <th style="color: #402b2b; font-family: Bahnschrift;">
                                                    Дата на вземане
                                                </th>
                                                <th style="color: #402b2b; font-family: Bahnschrift;">
                                                    Дата на връщане
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var book in Model.BooksToReturn)
                                            {
                                                <tr>
                                                    <td style="color: #402b2b; font-family: Bahnschrift;" width="15%">@book.Title</td>
                                                    <td style="color: #402b2b; font-family: Bahnschrift;" width="15%">@book.BorrowDate</td>
                                                    <td style="color: #402b2b; font-family: Bahnschrift;" width="15%">@book.ReturnDate</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="px-4">
                                <div class="p-4 rounded shadow-sm bg-light">
                                    <p class="normal-text mb-0">Няма история на взимани книги.</p>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
