@model LibraryArchive.ViewModels.GenreViewModel.AddGenreViewModel;
@{
    ViewData["Title"] = "Add Genre | Library Archive";
}

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-signup.css" rel="stylesheet" type="text/css" />
</head>

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Add" asp-controller="Genre" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <h2 class="normal-heading">Добави жанр</h2>
                        <br />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">* Име на жанрът</label>
                        <input asp-for="GenreName" class="form-control normal-text" placeholder="Въведете името на жанрът..." />
                        <span asp-validation-for="GenreName" class="text-danger"></span>
                    </div>                   
                    <div class="form-group align-items-center text-center">
                        <input type="submit" id="register" value="Регистрация" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>