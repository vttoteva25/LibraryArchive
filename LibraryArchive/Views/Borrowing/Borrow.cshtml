@model LibraryArchive.ViewModels.BorrowViewModel.BorrowBookViewModel;
@{
    ViewData["Title"] = "Borrow| Library Archive";
}

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-signup.css" rel="stylesheet" type="text/css" />
</head>

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Borrow" asp-controller="Borrowing" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group text-center">
                        <h2 class="normal-heading">Вземане на книга</h2>
                        <br />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Читател</label>
                        <input readonly asp-for="UserId" class="form-control normal-text" placeholder="Читател" />
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Библиотечен номер на книгата</label>
                        <input asp-for="BookId" class="form-control normal-text" placeholder="Библиотечен номер на книгата" />
                        <span asp-validation-for="BookId" class="text-danger"></span>
                    </div>
                    <div class="form-group align-items-center text-center">
                        <input type="submit" id="borrow" value="Вземи" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>