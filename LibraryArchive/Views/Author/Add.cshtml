@model LibraryArchive.ViewModels.AuthorViewModel.AddAuthorViewModel

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-signup.css" rel="stylesheet" type="text/css" />
</head>

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Add" asp-controller="Author" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label class="control-label normal-text">Име на автора</label>
                        <input asp-for="Name" class="form-control normal-text" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Роден</label>
                        <input type="date" asp-for="BirthDate" class="form-control normal-text" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Починал</label>
                        <input type="date" asp-for="DeathDate" class="form-control normal-text" />
                        <span asp-validation-for="DeathDate" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label normal-text">Биография</label>
                        <textarea asp-for="Biography" class="form-control normal-text" rows="4"></textarea>
                        <span asp-validation-for="Biography" class="text-danger"></span>
                    </div>

                    <div class="form-group align-items-center text-center">
                        <input type="submit" id="register" value="Добави" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
