@model dynamic;
@using LibraryArchive.HelpingTools;
@{
    ViewData["Title"] = "Profile | LibraryArchive ";
}

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
</head>

<body class="custom">
    <div class="row py-5 px-4">
        <div class="col-md-10 mx-auto">
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img src="/images/profilePicture.svg" alt="..." width="130" class="rounded-circle mb-2 img-thumbnail"></div>
                        <div class="media-body mb-5 normal-text">
                            <h3 class="mt-0 mb-1">
                                <span style="background-color: white; padding: 5px;">
                                    Здравейте, @if (Logged.Librarian != null)
                                    {
                                        @Logged.Librarian.FirstName @Logged.Librarian.LastName
                                    }
                                    else
                                    {
                                        @Logged.Administrator.FirstName @Logged.Administrator.LastName
                                    }
                                </span>
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="px-4 py-5" style="margin-top: 20px;">
                    <h5 class="mb-2" style="margin-left: 35px;">Информация</h5>
                    <div class="container">
                        <div class="p-4 my-2 rounded shadow-sm bg-light">
                            <p class="normal-text mb-0">
                                Потребителско име:@if (Logged.Librarian != null)
                                {
                                    @Logged.Librarian.Username
                                }
                                else
                                {
                                    @Logged.Administrator.Username
                                }
                            </p>
                            @if (Logged.Librarian is not null || Logged.Administrator is not null)
                            {
                                <a asp-controller="User" asp-action="SigningOut">
                                    <svg xmlns="http://www.w3.org/2000/svg" style="margin-top: -20px;" width="16" height="16" fill="#000000" class="bi bi-door-open-fill float-right" viewBox="0 0 16 16">
                                        <path d="M1.5 15a.5.5 0 0 0 0 1h13a.5.5 0 0 0 0-1H13V2.5A1.5 1.5 0 0 0 11.5 1H11V.5a.5.5 0 0 0-.57-.495l-7 1A.5.5 0 0 0 3 1.5V15H1.5zM11 2h.5a.5.5 0 0 1 .5.5V15h-1V2zm-2.5 8c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                                    </svg>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
