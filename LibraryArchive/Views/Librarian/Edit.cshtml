@model LibraryArchive.ViewModels.LibrarianViewModel.EditLibrarianViewModel;

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/login-signup.css" rel="stylesheet" type="text/css" />
</head>

<body class="dark-body">
    <div class="container">
        <div class="row justify-content-center lower">
            <div class="col-md-6 register-form-bg rounded">
                <form asp-action="Edit" asp-controller="Librarian" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <h2 class="normal-heading">Редактиране</h2>
                        <br />
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">ЕГН</label>
                        <input readonly type="UserId" asp-for="@Model.LibrarianId" class="form-control normal-text" />
                        <span asp-validation-for="LibrarianId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Име</label>
                        <input readonly type="FirstName" asp-for="@Model.FirstName" class="form-control normal-text" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Фамилия</label>
                        <input type="LastName" asp-for="@Model.LastName" class="form-control normal-text" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Дата на раждане</label>
                        <input type="BirthDate" readonly asp-for="@Model.BirthDate" class="form-control normal-text" />
                        <span asp-validation-for="BirthDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Телефонен номер</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control normal-text" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Email</label>
                        <input type="Email" asp-for="@Model.Email" class="form-control normal-text" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Пол</label>
                        <select asp-for="Gender" class="browser-default custom-select">
                            <option selected=""></option>
                            <option>Мъж</option>
                            <option>Жена</option>
                            <option>Друг</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Потрбителско име</label>
                        <input readonly type="Username" asp-for="@Model.Username" class="form-control normal-text" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Парола</label>
                        <input type="Password" asp-for="@Model.Password" class="form-control normal-text" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label normal-text">Потвърди паролата</label>
                        <input type="Password" asp-for="@Model.ConfirmPassword" class="form-control normal-text" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group align-items-center text-center">
                        <input type="submit" id="redaction" value="Редактирай" class="btn btn-lg dark-button" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
