@model dynamic;
@using LibraryArchive.HelpingTools;
@{
    ViewData["Title"] = "Profile | LibraryArchive";
}

<head>
    <link href="~/css/custom-style.css" rel="stylesheet" type="text/css" />
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/css/main.css" rel="stylesheet" type="text/css" />
</head>

<body class="custom">
    <div class="row py-5 px-4">
        <div class="col-md-10 mx-auto">
            <div class="bg-white shadow rounded overflow-hidden">
                <div class="px-4 pt-0 pb-4 cover">
                    <div class="media align-items-end profile-head">
                        <div class="profile mr-3"><img src="/images/profilePicture.svg" alt="..." width="130" class="rounded-circle mb-2 img-thumbnail"></div>
                    </div>
                </div>
                <div class="px-4 py-5" style="margin-top: 20px;">
                    <h2 class="mb-2" style="margin-left: 35px;">Информация</h2>
                    <div class="container">
                        <div class="p-4 my-2 rounded shadow-sm bg-light">
                            <p class="normal-text mb-0">Потребителско име: @Model.User.Username</p>
                            <p class="normal-text mb-0">Име: @Model.User.FirstName</p>
                            <p class="normal-text mb-0">Фамилия: @Model.User.LastName</p>
                            <p class="normal-text mb-0">Дата на раждане: @Model.User.BirthDate.ToShortDateString()</p>
                            <p class="normal-text mb-0">Телефонен номер: @Model.User.PhoneNumber</p>
                            <p class="normal-text mb-0">E-mail: @Model.User.Email</p>
                        </div>                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
